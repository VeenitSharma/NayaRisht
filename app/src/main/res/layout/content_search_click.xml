<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.villupuram.nayarishta.SearchClick"
  >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="right"
        android:id="@+id/back"
        >

        <ImageView android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/ic_cross"
            android:layout_marginRight="20dp"
            android:id="@+id/cross"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

    <TextView
        android:id="@+id/qSearch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:clickable="true"
        android:text="Quick\n Search" />

    <TextView
        android:id="@+id/advSearch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/qSearch"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"
        android:textColor="#ffffff"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginTop="28dp"
        android:text="Advance\n Search" />

    <TextView
        android:id="@+id/pidSearch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/advSearch"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_marginTop="42dp"
        android:text="Profile\n ID Search" />


    </LinearLayout>
</RelativeLayout>
