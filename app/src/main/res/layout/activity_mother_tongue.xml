<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.villupuram.nayarishta.MotherTongue"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/topbar"
        android:paddingLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Select Mother Tongue"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="17dp"
            />
        
        <ImageButton android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/ic_cross"
            android:layout_marginRight="20dp"
            android:onClick="back"
            android:layout_alignParentRight="true"
            android:id="@+id/cross"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>




    <CheckBox
        android:id="@+id/hindi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="11dp"
        android:button="@drawable/checkbox"
        android:layout_below="@+id/topbar"
        android:textColor="#FFFFFF"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:id="@+id/hinditext"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hindi"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hindi">
    </View>

    <CheckBox
        android:id="@+id/marathi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/hindi"
        android:layout_alignStart="@+id/hindi"
        android:layout_below="@+id/hindi"
        android:layout_marginTop="23dp"
        android:button="@drawable/checkbox"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marathi"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="8dp"
        android:id="@+id/marathitext"
        android:layout_toRightOf="@id/marathi"
        />


    <CheckBox
        android:id="@+id/telgu"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:button="@drawable/checkbox"
        android:layout_alignEnd="@+id/marathi"
        android:layout_alignLeft="@+id/marathi"
        android:layout_alignRight="@+id/marathi"
        android:layout_alignStart="@+id/marathi"
        android:layout_below="@+id/marathi"
        android:layout_marginTop="23dp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bengali"
        android:layout_below="@+id/marathitext"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:id="@+id/bengalitext"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/telgu"
        />




    <CheckBox
        android:id="@+id/Gujrati"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/telgu"
        android:layout_alignStart="@+id/telgu"
        android:layout_below="@+id/telgu"
        android:layout_marginTop="23dp"
        android:button="@drawable/checkbox"
        android:textColor="#FFFFFF"

     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gujrati"
        android:layout_below="@+id/bengalitext"
        android:textColor="#ffffff"
        android:id="@+id/gujratitext"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/telgu"
        />



    <CheckBox
        android:id="@+id/punjabi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/marathi"
        android:layout_alignRight="@+id/marathi"
        android:button="@drawable/checkbox"
        android:layout_below="@+id/Gujrati"
        android:layout_marginTop="23dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="malayalam"
        android:id="@+id/malyalamtext"
        android:layout_below="@+id/Gujrati"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/telgu"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/punjabi"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:onClick="cancle"
        android:layout_marginTop="30dp"
        android:id="@+id/resetview1"

        >

    <Button
        android:id="@+id/cancleimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cancel"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reset All"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/cancleimage"
        android:layout_marginLeft="10dp"
      />

    </RelativeLayout>

</RelativeLayout>
