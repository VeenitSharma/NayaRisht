<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1DEDD"
    tools:context="com.villupuram.nayarishta.ChangePassword">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/topbar"
        android:background="@color/red"

        >


        <RelativeLayout
            android:layout_width="60dp"
            android:onClick="click"
            android:id="@+id/cback"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/arrowwhite"
                />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            />



    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_centerVertical="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#e1dedd"
        android:alpha="0.5"
        android:layout_marginTop="20dp"

        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/currentpassword"
            android:lines="1"
            android:hint="Current Password"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            />



    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_below="@+id/cp"
        android:id="@+id/newtext"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/newpas"
        android:paddingLeft="20dp"
        android:visibility="gone"

        android:paddingRight="20dp"
        android:background="#e1dedd"
        android:layout_below="@+id/newtext"
        android:layout_marginTop="5dp"
        android:alpha="0.5"

        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/newpassword"
            android:lines="1"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@android:color/transparent"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_below="@+id/newpas"
        android:id="@+id/confrm"
        android:layout_marginTop="5dp"
        android:visibility="gone"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cnfrmpas"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#e1dedd"
        android:layout_below="@+id/confrm"
        android:visibility="gone"

        android:layout_marginTop="5dp"
        android:alpha="0.5"

        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/confirmpasswoed"
            android:lines="1"
            android:hint="Confirm Password"
            android:background="@android:color/transparent"
            />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/cnfrmpas"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:id="@+id/submit"
        android:onClick="submit"
        android:textColor="#ffffff"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        />








</RelativeLayout>


</RelativeLayout>
