<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbackground"

    tools:context="com.villupuram.nayarishta.Splash">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView"

        >

        <ImageView
            android:id="@+id/imageFView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/logonew"
           />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shapered"
            android:id="@+id/searchlayout"
            android:clickable="true"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                >


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search_white_18dp"
                android:id="@+id/search_icon"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Your Match Maker"
                android:textAllCaps="false"
                android:id="@+id/makertext"
                android:textColor="#ffff"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/search_icon"
                />

            </RelativeLayout>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal"
            android:layout_weight="2"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="Login"
                android:id="@+id/loginbtn"
                android:onClick="login"
                android:background="@drawable/shape"
                android:textAllCaps="false"
                android:textColor="#fff"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Register"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:onClick="register"
                android:background="@drawable/shape"
                />


        </LinearLayout>
        



    </LinearLayout>





</RelativeLayout>
