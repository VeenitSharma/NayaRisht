<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/red"
        android:id="@+id/topbar"
        >

        <RelativeLayout
            android:layout_width="60dp"
            android:onClick="back"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrowwhite"
                android:layout_marginLeft="20dp"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17dp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/g"
        android:id="@+id/topsec"
        android:layout_below="@+id/topbar"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/dash"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/sec1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/addphotobtn"
                    android:layout_marginTop="20dp"
                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/user_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/user_photo"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#ffffff"/>

                    </RelativeLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/addphotobtn"



                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nandita Goswami"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:id="@+id/username"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRUP"
                        android:textColor="#ffffff"
                        android:id="@+id/text"
                        android:textSize="17dp"
                        android:layout_below="@+id/username"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:id="@+id/profileId"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/text"
                        android:layout_below="@+id/username"
                        />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/profileId"
                        android:text="Send Interest"
                        android:background="@color/red"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/interestsend"
                        />

                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/topsec"
        android:background="#f8f8f8"
        android:id="@+id/sec4"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Details"
            android:layout_alignParentBottom="true"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"

            android:layout_marginLeft="20dp"
            />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sec4"
        android:layout_marginBottom="20dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sec6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Created For"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/protext"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="Self"
                    android:id="@+id/profileTxt"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sec6"
                android:id="@+id/sec7"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOB"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/dob"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="17 Feb 1883"
                    android:textSize="16dp"
                    android:id="@+id/datetext"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sec7"
                android:id="@+id/sec8"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/age"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:id="@+id/agetext"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sec8"
                android:id="@+id/sec9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/height"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="5'6''(172 cm) "
                    android:textSize="16dp"
                    android:id="@+id/heighttext"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sec9"
                android:id="@+id/sec10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/status"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="Never"
                    android:textSize="16dp"
                    android:id="@+id/gendertext"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/sec10"
                android:background="#f8f8f8"
                android:layout_marginTop="20dp"
                android:id="@+id/reli"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Religious Details"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/riligi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/reli"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riligious"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/fds"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/religous"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/riligi"
                android:background="#f8f8f8"
                android:layout_marginTop="20dp"
                android:id="@+id/edu"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education/Occupation Details"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edu"
                android:id="@+id/pro"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profession"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/fs"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="150dp"
                    />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/Profession"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>