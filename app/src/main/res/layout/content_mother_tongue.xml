<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.villupuram.nayarishta.MotherTongue"
  >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/red"
        android:id="@+id/topbar"
        >


    </RelativeLayout>


    <CheckBox
        android:id="@+id/hindi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:text="Hindi"
        android:layout_below="@+id/topbar"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/hindi">

    </View>

    <CheckBox
        android:id="@+id/marathi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hindi"
        android:layout_alignStart="@+id/hindi"
        android:layout_below="@+id/hindi"
        android:layout_marginTop="23dp"
        android:text="Marathi"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/marathi">

    </View>

    <CheckBox
        android:id="@+id/telgu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/marathi"
        android:layout_alignLeft="@+id/marathi"
        android:layout_alignRight="@+id/marathi"
        android:layout_alignStart="@+id/marathi"
        android:layout_below="@+id/marathi"
        android:layout_marginTop="23dp"
        android:text="Telgu"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/telgu">

    </View>
    <CheckBox
        android:id="@+id/bengali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/telgu"
        android:layout_alignStart="@+id/telgu"
        android:layout_below="@+id/telgu"
        android:layout_marginTop="20dp"
        android:text="Bengali"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/bengali">

    </View>
    <CheckBox
        android:id="@+id/punjabi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/marathi"
        android:layout_alignRight="@+id/marathi"

        android:layout_below="@+id/bengali"
        android:layout_marginTop="34dp"
        android:text="Punjabi"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/punjabi">

    </View>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:clickable="true"
        android:layout_alignLeft="@+id/punjabi"
        android:layout_alignStart="@+id/punjabi"
        android:layout_below="@+id/punjabi"
        android:layout_marginTop="34dp"
        android:src="@drawable/cancel" />

    <TextView
        android:id="@+id/tv18"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:clickable="true"
        android:text="Reset All"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

</RelativeLayout>
